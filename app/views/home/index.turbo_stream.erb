
<%= turbo_stream.append "stories_list" do %>
  <%= render partial: "stories/listdetail", collection: @stories, as: :story %>
<% end %>
<%= turbo_stream.replace "load_more" do %>
      <% if @show_more %>
    <%=
        link_to raw("more"),
        @root_path ? "/page/#{@page + 1}" : { controller: controller_name, action: action_name, page: @page + 1 },
        data: {
            turbo_stream: "",
            page: @page
        },
        id: "load_more",
        class: "main_button"
    %>
  <% end %>
<% end %>

